{
  "schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.2",
  "body": [{
    "type": "Container",
    "separator": true,
    "items": [{
        "type": "ColumnSet",
        "separator": true,
        "columns": [{
            "type": "Column",
            "width": 25,
            "items": [{
              "type": "TextBlock",
              "text": "Title:",
              "wrap": true,
              "size": "Small",
              "color": "Accent",
              "isSubtle": false,
              "weight": "Bolder"
            }]
          },
          {
            "type": "Column",
            "width": 75,
            "items": [{
              "type": "TextBlock",
              "text": "${item.title}",
              "wrap": true,
              "size": "Small",
              "isSubtle": true
            }]
          }
        ],
        "spacing": "Medium"
      },
      {
        "type": "ColumnSet",

        "columns": [{
            "type": "Column",
            "width": 25,
            "items": [{
              "type": "TextBlock",
              "text": "Multiple Line of Text:",
              "wrap": true,
              "size": "Small",
              "color": "Accent",
              "isSubtle": false,
              "weight": "Bolder"
            }]
          },
          {
            "type": "Column",
            "width": 75,
            "items": [{
              "type": "TextBlock",
              "text": "${item.multilinetext}",
              "wrap": true,
              "size": "Small",
              "isSubtle": true
            }]
          }
        ],
        "spacing": "Medium"
      },
      {
        "type": "ColumnSet",
        "columns": [{
            "type": "Column",
            "width": 25,
            "items": [{
              "type": "TextBlock",
              "text": "Choice Field DDL:",
              "wrap": true,
              "size": "Small",
              "color": "Accent",
              "isSubtle": false,
              "weight": "Bolder"
            }]
          },
          {
            "type": "Column",
            "width": 75,
            "items": [{
              "type": "TextBlock",
              "text": "${item.choicefieldddl}",
              "wrap": true,
              "size": "Small",
              "isSubtle": true
            }]
          }
        ],
        "spacing": "Medium"
      },
      {
        "type": "ColumnSet",

        "columns": [{
            "type": "Column",
            "width": 25,
            "items": [{
              "type": "TextBlock",
              "text": "Date Time Field:",
              "wrap": true,
              "size": "Small",
              "color": "Accent",
              "isSubtle": false,
              "weight": "Bolder"
            }]
          },
          {
            "type": "Column",
            "width": 75,
            "items": [{
              "type": "TextBlock",
              "text": "${formatDateTime(item.datetimefield, 'MM/dd/yyyy')}",
              "wrap": true,
              "size": "Small",
              "isSubtle": true
            }]
          }
        ],
        "spacing": "Medium"
      },
      {
        "type": "ColumnSet",
        "columns": [{
            "type": "Column",
            "width": 25,
            "items": [{
              "type": "TextBlock",
              "text": "Choice Field Radio:",
              "wrap": true,
              "size": "Small",
              "color": "Accent",
              "isSubtle": false,
              "weight": "Bolder"
            }]
          },
          {
            "type": "Column",
            "width": 75,
            "items": [{
              "type": "TextBlock",
              "text": "${item.choicefieldradio}",
              "wrap": true,
              "size": "Small",
              "isSubtle": true
            }]
          }
        ],
        "spacing": "Medium"
      },
      {
        "type": "ColumnSet",

        "columns": [{
            "type": "Column",
            "width": 25,
            "items": [{
              "type": "TextBlock",
              "text": "Choice Field Checkbox (multi-select):",
              "wrap": true,
              "size": "Small",
              "color": "Accent",
              "isSubtle": false,
              "weight": "Bolder"
            }]
          },
          {
            "type": "Column",
            "width": 75,
            "items": [{
              "type": "TextBlock",
              "text": "${item.choicefieldcheckbox}",
              "wrap": true,
              "size": "Small",
              "isSubtle": true
            }]
          }
        ],
        "spacing": "Medium"
      },
      {
        "type": "ColumnSet",
        "columns": [{
            "type": "Column",
            "width": 25,
            "items": [{
              "type": "TextBlock",
              "text": "Number Field:",
              "wrap": true,
              "size": "Small",
              "color": "Accent",
              "isSubtle": false,
              "weight": "Bolder"
            }]
          },
          {
            "type": "Column",
            "width": 75,
            "items": [{
              "type": "TextBlock",
              "text": "${item.numberfield} ",
              "wrap": true,
              "size": "Small",
              "isSubtle": true
            }]
          }
        ],
        "spacing": "Medium"
      },
      {
        "type": "ColumnSet",

        "columns": [{
            "type": "Column",
            "width": 25,
            "items": [{
              "type": "TextBlock",
              "text": "Currency Field:",
              "wrap": true,
              "size": "Small",
              "color": "Accent",
              "isSubtle": false,
              "weight": "Bolder"
            }]
          },
          {
            "type": "Column",
            "width": 75,
            "items": [{
              "type": "TextBlock",
              "text": "${item.currencyfield} ",
              "wrap": true,
              "size": "Small",
              "isSubtle": true
            }]
          }
        ],
        "spacing": "Medium"
      },
      {
        "type": "ColumnSet",
        "columns": [{
            "type": "Column",
            "width": 25,
            "items": [{
              "type": "TextBlock",
              "text": "Yes/No Field:",
              "wrap": true,
              "size": "Small",
              "color": "Accent",
              "isSubtle": false,
              "weight": "Bolder"
            }]
          },
          {
            "type": "Column",
            "width": 75,
            "items": [{
              "type": "TextBlock",
              "text": "${item.yesnofield}",
              "wrap": true,
              "size": "Small",
              "isSubtle": true
            }]
          }
        ],
        "spacing": "Medium"
      }
    ]
  }]
}