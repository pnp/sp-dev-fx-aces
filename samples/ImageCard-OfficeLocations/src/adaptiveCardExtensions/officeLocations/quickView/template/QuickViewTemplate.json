{
  "schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.2",
  "minHeight": "${minHeight}",
  "body": [
    {
      "type": "ColumnSet",
      "isVisible": "${showSearch}",
      "columns": [
        {
          "type": "Column",
          "width": 80,
          "items": [
            {
              "type": "Input.Text",
              "placeholder": "Search...",
              "id": "searchText",
              "value": "${searchText}"
            }
          ]
        },
        {
          "type": "Column",
          "width": 10,
          "items": [
            {
              "type": "ActionSet",
              "actions": [
                {
                  "type": "Action.Submit",
                  "iconUrl": "${icons.searchIcon}",
                  "data": {
                    "id": "search"
                  }
                }
              ]
            }
          ],
          "verticalContentAlignment": "Center"
        },
        {
          "type": "Column",
          "width": 10,
          "isVisible": "${showClearSearch}",
          "items": [
            {
              "type": "ActionSet",
              "actions": [
                {
                  "type": "Action.Submit",
                  "iconUrl": "${icons.clearIcon}",
                  "data": {
                    "id": "clear"
                  }
                }
              ]
            }
          ],
          "verticalContentAlignment": "Center"
        }
      ]
    },
    {
      "type": "TextBlock",
      "size": "small",
      "isVisible": "${showClearSearch}",
      "text": "Showing results for: **${searchText}**",
      "spacing": "none",
      "wrap": true,
      "horizontalAlignment": "left"
    },
    {
      "type": "Container",
      "isVisible": "${showOffices}",
      "separator": true,
      "items": [
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": "25px",
              "isVisible": "${showNavigationButtons}",
              "items": [
                {
                  "type": "Image",
                  "url": "${icons.previousIcon}",
                  "selectAction": {
                    "type": "Action.Submit",
                    "title": "Previous",
                    "data": {
                      "id": "previous"
                    }
                  }
                }
              ],
              "verticalContentAlignment": "Center"
            },
            {
              "type": "Column",
              "width": "stretch",
              "separator": true,
              "items": [
                {
                  "type": "TextBlock",
                  "text": "${office.name}",
                  "weight": "Bolder",
                  "wrap": true,
                  "size": "Large",
                  "spacing": "none",
                  "horizontalAlignment": "Center"
                },
                {
                  "type": "TextBlock",
                  "isVisible": "${showTime}",
                  "horizontalAlignment": "Center",
                  "verticalContentAlignment": "Center",
                  "text": "${office.time}",
                  "wrap": true,
                  "spacing": "none",
                  "size": "default"
                }
              ],
              "verticalContentAlignment": "Center"
            },
            {
              "type": "Column",
              "width": "25px",
              "separator": true,
              "isVisible": "${showNavigationButtons}",
              "items": [
                {
                  "type": "Image",
                  "url": "${icons.nextIcon}",
                  "selectAction": {
                    "type": "Action.Submit",
                    "title": "Next",
                    "data": {
                      "id": "next"
                    }
                  }
                }
              ],
              "verticalContentAlignment": "Center"
            }
          ]
        },
        {
          "type": "Image",
          "url": "${office.locationMap.imageUrl}",
          "altText": "${office.locationMap.imageAlt}",
          "separator": true,
          "isVisible": "${showMapsInQuickView}"
        },
        {
          "type": "ColumnSet",
          "separator": true,
          "columns": [
            {
              "type": "Column",
              "width": "25px",
              "separator": true,
              "verticalContentAlignment": "Center",
              "items": [
                {
                  "type": "Image",
                  "url": "${icons.addressIcon}"
                }
              ]
            },
            {
              "type": "Column",
              "verticalContentAlignment": "Center",
              "separator": true,
              "minHeight": "72px",
              "items": [
                {
                  "type": "TextBlock",
                  "size": "Medium",
                  "text": "${office.address}",
                  "spacing": "Padding",
                  "maxLines": 3,
                  "wrap": true,
                  "horizontalAlignment": "Center"
                }
              ]
            },
            {
              "type": "Column",
              "width": "25px",
              "separator": true,
              "verticalContentAlignment": "Center",
              "items": [
                {
                  "type": "Image",
                  "url": "${icons.copyIcon}",
                  "selectAction": {
                    "type": "Action.Submit",
                    "title": "Copy",
                    "data": {
                      "id": "copy"
                    }
                  }
                }
              ]
            }
          ]
        },
        {
          "type": "ColumnSet",
          "separator": true,
          "isVisible": "${showWeather}",
          "style": "default",
          "minHeight": "70px",
          "columns": [
            {
              "type": "Column",
              "items": [
                {
                  "type": "ColumnSet",
                  "spacing": "none",
                  "isVisible": "${office.gotWeather && office.weather != null}",
                  "columns": [
                    {
                      "type": "Column",
                      "width": "50px",
                      "items": [
                        {
                          "type": "Image",
                          "url": "${office.weather.icon}"
                        }
                      ],
                      "verticalContentAlignment": "Center"
                    },
                    {
                      "type": "Column",
                      "width": "stretch",
                      "items": [
                        {
                          "type": "TextBlock",
                          "text": "${office.weather.temperature}°C",
                          "size": "Large",
                          "spacing": "None",
                          "wrap": true,
                          "horizontalAlignment": "Center"
                        }
                      ],
                      "verticalContentAlignment": "Center"
                    },
                    {
                      "type": "Column",
                      "width": "auto",
                      "items": [
                        {
                          "type": "TextBlock",
                          "text": "High ${office.weather.high}°C",
                          "horizontalAlignment": "Left",
                          "spacing": "None",
                          "wrap": true
                        },
                        {
                          "type": "TextBlock",
                          "text": "Low  ${office.weather.low}°C",
                          "horizontalAlignment": "Left",
                          "spacing": "None",
                          "wrap": true
                        },
                        {
                          "type": "TextBlock",
                          "text": "Wind ${office.weather.windSpeed}",
                          "horizontalAlignment": "Left",
                          "spacing": "None",
                          "wrap": true
                        }
                      ],
                      "verticalContentAlignment": "Center"
                    }
                  ]
                },
                {
                  "type": "Image",
                  "url": "${loadingImage}",
                  "altText": "Loading...",
                  "isVisible": "${!office.gotWeather}",
                  "horizontalAlignment": "Center",
                  "width": "45px",
                  "spacing": "padding"
                },
                {
                  "type": "TextBlock",
                  "size": "Medium",
                  "isVisible": "${office.gotWeather && office.weather == null}",
                  "text": "No weather data available",
                  "spacing": "none",
                  "separator": true,
                  "wrap": true,
                  "horizontalAlignment": "Center"
                }
              ],
              "verticalContentAlignment": "Center"
            }
          ]
        },
        {
          "type": "ColumnSet",
          "separator": true,
          "columns": [
            {
              "type": "Column",
              "isVisible": "${showOpenMapsButton}",
              "items": [
                {
                  "type": "ActionSet",
                  "actions": [
                    {
                      "type": "VivaAction.ShowLocation",
                      "title": "Open in maps",
                      "style": "positive",
                      "id": "ShowLocation",
                      "parameters": {
                        "locationCoordinates": {
                          "latitude": "${office.latitude}",
                          "longitude": "${office.longitude}"
                        }
                      }
                    }
                  ]
                }
              ]
            },
            {
              "type": "Column",
              "isVisible": "${office.locationMap.directionUrl != '#'}",
              "items": [
                {
                  "type": "ActionSet",
                  "actions": [
                    {
                      "type": "Action.OpenUrl",
                      "title": "Get directions",
                      "style": "positive",
                      "url": "${office.locationMap.directionUrl}",
                      "tooltip": "Open directions in maps"
                    }
                  ]
                }
              ]
            }
          ]
        },
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "isVisible": "${office.chatWithManagerLink != null}",
              "items": [
                {
                  "type": "ActionSet",
                  "actions": [
                    {
                      "type": "Action.OpenUrl",
                      "title": "Contact the manager",
                      "style": "positive",
                      "url": "${office.chatWithManagerLink}",
                      "tooltip": "Chat with the manager"
                    }
                  ]
                }
              ]
            },
            {
              "type": "Column",
              "isVisible": "${office.pageUrl != null}",
              "items": [
                {
                  "type": "ActionSet",
                  "actions": [
                    {
                      "type": "Action.OpenUrl",
                      "title": "More details",
                      "style": "positive",
                      "url": "${office.pageUrl}",
                      "tooltip": "View more details of this office"
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "Container",
      "isVisible": "${!showOffices}",
      "style": "warning",
      "items": [
        {
          "type": "TextBlock",
          "size": "Medium",
          "weight": "Bolder",
          "text": "No results found",
          "spacing": "Padding",
          "separator": true,
          "wrap": true,
          "horizontalAlignment": "Center"
        }
      ]
    }
  ]
}