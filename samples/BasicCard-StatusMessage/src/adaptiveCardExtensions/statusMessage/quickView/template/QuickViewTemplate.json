{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.2",
    "body": [
        {
            "type": "Container",
            "items": [
                {
                    "type": "Input.Text",
                    "placeholder": "Enter your status message here",
                    "id": "txtStatusMessage"
                },
                {
                    "type": "ActionSet",
                    "actions": [
                        {
                            "type": "Action.Submit",
                            "title": "Submit",
                            "style": "positive",
                            "data": {
                                "id": "submit"
                            }
                        },
                        {
                            "type": "Action.Submit",
                            "title": "Cancel",
                            "style": "destructive",
                            "data": {
                                "id": "cancel"
                            }
                        }
                    ]
                }
            ]
        }
    ]
}