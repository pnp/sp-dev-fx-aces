{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.3",
    "body": [
        {
            "type": "Container",
            "items": [
                {
                    "type": "TextBlock",
                    "text": "Success!",
                    "wrap": true,
                    "size": "medium",
                    "color": "good",
                    "horizontalAlignment": "center",
                    "id": "lblSuccess",
                    "weight": "bolder"
                }
            ]
        },
        {
            "type": "ActionSet",
            "actions": [
                {
                    "type": "Action.Submit",
                    "title": "Back",
                    "style": "destructive",
                    "id": "btnBack",
                    "data": {
                        "id": "back"
                    }
                },
                {
                    "type": "Action.Submit",
                    "title": "Close",
                    "style": "destructive",
                    "id": "btnClose",
                    "data": {
                        "id": "close"
                    }
                }
            ]
        }
    ]
}