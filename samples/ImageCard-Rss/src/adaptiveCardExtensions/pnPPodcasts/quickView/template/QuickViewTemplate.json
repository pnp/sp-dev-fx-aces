{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.3",
    "body": [
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "Input.Text",
                            "placeholder": "Search by episode description",
                            "id": "SearchText",
                            "inlineAction": {
                                "type": "Action.Submit",
                                "iconUrl": "data:image/svg+xml;utf8,<svg xmlns=\"http://www.w3.org/2000/svg\" viewBox=\"0 0 2048 2048\"><path d=\"M1344 0q97 0 187 25t168 71 142 110 111 143 71 168 25 187q0 97-25 187t-71 168-110 142-143 111-168 71-187 25q-125 0-239-42t-211-121l-785 784q-19 19-45 19t-45-19-19-45q0-26 19-45l784-785q-79-96-121-210t-42-240q0-97 25-187t71-168 110-142T989 96t168-71 187-25zm0 1280q119 0 224-45t183-124 123-183 46-224q0-119-45-224t-124-183-183-123-224-46q-119 0-224 45T937 297 814 480t-46 224q0 119 45 224t124 183 183 123 224 46z\" ></path></svg>",
                                "data": {
                                    "id": "Search"
                                }
                            },
                            "value": "{searchText}"
                        }
                    ]
                }
            ]
        },
        {
            "type": "Container",
            "items": [
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "width": "stretch",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "${Items.summary}",
                                    "wrap": true,
                                    "horizontalAlignment": "Left",
                                    "size": "Medium",
                                    "weight": "Bolder",
                                    "color": "Accent"
                                }
                            ],
                            "selectAction": {
                                "type": "Action.OpenUrl",
                                "url": "${Items.link}"
                            }
                        }
                    ],
                    "style": "default"
                }
            ]
        },
        {
            "type": "Container",
            "items": [
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "width": "10px",
                            "items": [
                                {
                                    "type": "Image",
                                    "url": "data:image/svg+xml;utf8,<svg xmlns=\"http://www.w3.org/2000/svg\" viewBox=\"0 0 2048 2048\"><path d=\"M1443 2045L421 1024 1443 3l90 90-930 931 930 931-90 90z\"></path></svg>",
                                    "size": "Small",
                                    "width": "0px",
                                    "selectAction": {
                                        "type": "Action.Submit",
                                        "title": "Previous",
                                        "data": {
                                            "id": "previous",
                                            "SearchText": "{{SearchText.value}}"
                                        }
                                    },
                                    "horizontalAlignment": "Left",
                                    "spacing": "Medium"
                                }
                            ],
                            "horizontalAlignment": "Left",
                            "height": "stretch",
                            "verticalContentAlignment": "Center"
                        },
                        {
                            "type": "Column",
                            "width": "250px",
                            "items": [
                                {
                                    "type": "Media",
                                    "poster": "${Items.image}",
                                    "sources": [
                                        {
                                            "mimeType": "video/mp4",
                                            "url": "${Items.enclosure}"
                                        }
                                    ]
                                },
                                {
                                    "type": "TextBlock",
                                    "text": "${Items.duration}",
                                    "horizontalAlignment": "Center",
                                    "size": "Medium",
                                    "height": "stretch",
                                    "color": "Accent",
                                    "weight": "Bolder"
                                }
                            ],
                            "selectAction": {
                                "type": "Action.OpenUrl",
                                "url": "${Items.url}"
                            }
                        },
                        {
                            "type": "Column",
                            "width": "10px",
                            "items": [
                                {
                                    "type": "Image",
                                    "url": "data:image/svg+xml;utf8,<svg xmlns=\"http://www.w3.org/2000/svg\" viewBox=\"0 0 2048 2048\"><path d=\"M515 1955l930-931L515 93l90-90 1022 1021L605 2045l-90-90z\"></path></svg>",
                                    "size": "Small",
                                    "width": "30px",
                                    "selectAction": {
                                        "type": "Action.Submit",
                                        "title": "Next",
                                        "data": {
                                            "id": "next",
                                            "SearchText": "{{SearchText.value}}"
                                        }
                                    }
                                }
                            ],
                            "horizontalAlignment": "Right",
                            "verticalContentAlignment": "Center"
                        }
                    ],
                    "spacing": "None"
                },
                {
                    "type": "TextBlock",
                    "text": "(${ID}/${TotalEpisodes})",
                    "wrap": true,
                    "horizontalAlignment": "Center",
                    "size": "Medium",
                    "spacing": "None",
                    "color": "Default"
                }
            ],
            "style": "emphasis",
            "separator": true,
            "horizontalAlignment": "Center"
        },
        {
            "type": "TextBlock",
            "text": "${Items.description}",
            "wrap": true
        }
    ]
}