{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.3",
    "body": [
        {
            "type": "TextBlock",
            "text": "üïµÔ∏è Monitor Identity",
            "wrap": true,
            "fontType": "Default",
            "size": "Medium",
            "weight": "Bolder",
            "color": "Default"
        },
        {
            "type": "Container",
            "spacing": "Small"
        },
        {
            "type": "ColumnSet",
            "$data": "${categories}",
            "columns": [
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "${name}",
                            "wrap": true,
                            "size": "Default",
                            "horizontalAlignment": "Left",
                            "weight": "Bolder"
                        },
                        {
                            "type": "TextBlock",
                            "text": "${description}",
                            "wrap": true,
                            "isSubtle": true,
                            "spacing": "Small",
                            "size": "Small",
                            "color": "attention"
                        }
                    ],
                    "verticalContentAlignment": "Top",
                    "width": 20
                },
                {
                    "type": "Column",
                    "width": "100px",
                    "items": [
                        {
                            "type": "ActionSet",
                            "actions": [
                                {
                                    "id": "${id}",
                                    "type": "Action.Submit",
                                    "title": "Details"
                                }
                            ]
                        }
                    ]
                }
            ],
            "separator": true,
            "spacing": "Medium"
        }
    ]
}