{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.3",
    "body": [
        {
            "type": "TextBlock",
            "size": "Medium",
            "weight": "Bolder",
            "text": "${labels.mainHeaderLabel}",
            "horizontalAlignment": "Center",
            "wrap": true,
            "style": "heading"
        },
        {
            "type": "TextBlock",
            "text": "${labels.nameLabel}",
            "wrap": true
        },
        {
            "type": "Input.Text",
            "id": "UserName",
            "value": "${prefilledData.UserIdentifier}"
        },
        {
            "type": "TextBlock",
            "text": "${labels.checkinTillLabel}",
            "wrap": true
        },
        {
            "type": "Input.Date",
            "id": "ValidUntill",
            "min": "${utcNow()}",
            "errorMessage": "Date must be of future"
        },
        {
            "type": "TextBlock",
            "size": "Medium",
            "weight": "Bolder",
            "text": "${labels.optionSectionLabel}",
            "horizontalAlignment": "Center",
            "wrap": true,
            "style": "heading"
        },
        {
            "type": "TextBlock",
            "text": "${labels.workOptionLabel}",
            "wrap": true
        },
        {
            "type": "Input.ChoiceSet",
            "id": "WorkLocationChoice",
            "value": "1",
            "choices": [
                {
                    "$data": "${prefilledData.workOptionItems}",
                    "title": "${choice}",
                    "value": "${value}"
                }
            ]
        },
        {
            "type": "TextBlock",
            "size": "Medium",
            "weight": "Bolder",
            "text": "${labels.declarationSectionLabel}",
            "horizontalAlignment": "Center",
            "wrap": true,
            "style": "heading"
        },
        {
            "type": "Input.Toggle",
            "title": "${labels.vaccineCheckLabel}",
            "id": "IsVaccinated",
            "value": "false"
        },
        {
            "type": "Input.Toggle",
            "title": "${labels.symptomCheckLabel}",
            "id": "HasCovidSymptoms",
            "value": "false"
        }
    ],
    "actions": [
        {
            "type": "Action.Submit",
            "title": "Submit"            
        }
    ]
}