{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.3",
  "speak": "<s>The forecast for Seattle ${date} is mostly clear with a High of ${tempHi} degrees and Low of ${tempLow} degrees</s>",
  "body": [{
      "type": "ColumnSet",
      "columns": [{
          "type": "Column",
          "width": "15px",
          "items": [{
            "type": "Image",
            "url": "data:image/svg+xml;utf8,<svg xmlns=\"http://www.w3.org/2000/svg\" viewBox=\"0 0 2048 2048\"><path d=\"M1443 2045L421 1024 1443 3l90 90-930 931 930 931-90 90z\"></path></svg>",
            "selectAction": {
              "type": "Action.Submit",
              "title": "Previous",
              "data": {
                "id": "previous"
              }
            }
          }],
          "verticalContentAlignment": "Top",
          "style": "default"
        },
        {
          "type": "Column",
          "width": "stretch",
          "items": [{
            "type": "TextBlock",
            "text": "${date}",
            "spacing": "None",
            "wrap": true
          }, {
            "type": "ColumnSet",
            "columns": [{
                "type": "Column",
                "width": "auto",
                "items": [{
                  "type": "Image",
                  "url": "https://messagecardplayground.azurewebsites.net/assets/Mostly%20Cloudy-Square.png",
                  "size": "Small"
                }]
              },
              {
                "type": "Column",
                "width": "auto",
                "items": [{
                  "type": "TextBlock",
                  "text": "${location.tempCurrent} ",
                  "size": "ExtraLarge",
                  "weight": "Bolder",
                  "wrap": true
                }]
              },
              {
                "type": "Column",
                "width": "stretch",
                "items": [{
                  "type": "TextBlock",
                  "text": "Â°${location.tempMeasure}",
                  "weight": "Bolder",
                  "spacing": "Small",
                  "wrap": true
                }]
              },
              {
                "type": "Column",
                "width": "stretch",
                "items": [{
                    "type": "TextBlock",
                    "text": "Hi ${location.tempHi}",
                    "wrap": true
                  },
                  {
                    "type": "TextBlock",
                    "text": "Lo ${location.tempLow}",
                    "spacing": "None",
                    "wrap": true
                  }
                ]
              }
            ]
          }, {
            "type": "TextBlock",
            "text": "${location.city}, ${location.state}",
            "size": "Large",
            "$when": "${location.state != ''}",
            "isSubtle": true,
            "wrap": true
          }, {
            "type": "TextBlock",
            "text": "${location.city}, ${location.country}",
            "size": "Large",
            "$when": "${location.state == ''}",
            "isSubtle": true,
            "wrap": true
          }]
        },
        {
          "type": "Column",
          "width": "15px",
          "items": [{
            "type": "Image",
            "url": "data:image/svg+xml;utf8,<svg xmlns=\"http://www.w3.org/2000/svg\" viewBox=\"0 0 2048 2048\"><path d=\"M515 1955l930-931L515 93l90-90 1022 1021L605 2045l-90-90z\"></path></svg>",
            "selectAction": {
              "type": "Action.Submit",
              "title": "Next",
              "data": {
                "id": "next"
              }
            }
          }],
          "verticalContentAlignment": "Top"
        }
      ]
    }

  ]
}