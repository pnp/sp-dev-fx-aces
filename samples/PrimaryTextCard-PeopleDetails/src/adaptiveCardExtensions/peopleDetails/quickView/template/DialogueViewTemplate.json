{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.3",
    "type": "AdaptiveCard",
    "body": [
        {
            "type": "TextBlock",
            "size": "default",
            "weight": "bolder",
            "text": "${message}",
            "horizontalAlignment": "center",
            "wrap": true
        },
        {
            "type": "ActionSet",
            "actions": [
                {
                    "type": "Action.Submit",
                    "title": "Yes",
                    "data": {
                        "id": "ConfirmDelete"
                    },
                    "style": "destructive"
                }
            ]
        }
    ]
}