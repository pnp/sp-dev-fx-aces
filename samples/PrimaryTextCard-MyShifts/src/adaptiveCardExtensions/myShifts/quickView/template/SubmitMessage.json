{
  "schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.2",
  "body": [{
    "type": "Container",
    "separator": true,
    "items": [
      {
        "type": "ColumnSet",
        "columns": [
          {
            "type": "Column",
            "items": [
              {
                "type": "TextBlock",
                "size": "Medium",
                "text": "Saved sucessfully",
                "wrap": true,
                "weight": "Bolder"
              }
            ],
            "width": "stretch",
            "height": "stretch"
          }
        ],
        "style": "emphasis",
        "bleed": true
      }
      ,
      {
        "type": "ActionSet",
        "actions": [{
          "type": "Action.Submit",
          "title": "Ok",
          "data": {
            "id": "ok",
            "itemId": "${id}"
          }
        }]
      }
    ]
  }]
}